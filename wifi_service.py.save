import time
import atexit
import os
import subprocess
from flask import Flask

app = Flask(__name__)

@atexit.register
def exit():
  print("Exited")

@app.route('/scan', methods=['GET'])
def scan():
  output = subprocess.check_output(["wpa_cli" -i wlan0 status"], stderr=subprocess.STDOUT, shell=False)
  print(output)
  return 'ok',200

@app.route('/connect', methods=['PUT'])
def scan():
  return 'ok',200

@app.route('/status', methods=['GET'])
def scan():
  return 'ok',200

if __name__ == '__main__':
  app.run(host='0.0.0.0', port=6000)

